<% content_for :title, "Sign Up" %>

<% if flash[:notice] %>
    <div class="container">
      <div class="col-md-12">
        <div class="alert alert-info" role="alert">
          <%= flash[:notice] %>
        </div>
      </div>
    </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Sign up</h2>
      <hr/>

      <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
          <%= devise_error_messages! %>
          <%= render partial: 'form', locals: {f:f} %>
          <% if params[:invite_uuid] %>
            <input type="hidden" name="invite_uuid" value="<%= params[:invite_uuid] %>">
          <% end %>
          <%= f.submit "Sign up", class: 'btn btn-default btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
